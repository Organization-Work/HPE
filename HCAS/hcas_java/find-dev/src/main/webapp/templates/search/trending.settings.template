<div>
    <form>
        <div class="btn-toolbar">
            <div class="btn-group">
                <button class="btn btn-mini btn-info trending-refresh"><i class="icon-white icon-refresh"></i> Refresh</button>
                <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">Settings <span class="caret"></span></button>
    
                <ul class="dropdown-menu">
                    <li>
                        <div class="trending-settings form-horizontal">

                        <div class="control-group">
                        	<label class="control-label" for="trending-charttype">Chart Type</label>
                            <div class="controls">
                            	<select id="trending-charttype" value='Line'>
                                   	<option value="Bar Chart">Totals Bar Chart</option>
                                	<option value="Line Chart">Totals Comparison Chart</option>
                                	<option value="Daily Change">Daily Change Chart</option>
                                 </select>
                            </div>
                       	</div>
 
                            <div class="control-group">
                                <label class="control-label" for="trending-grids">Show Grid</label>
                                <div class="controls">
                                    <input type="checkbox" id="trending-grids" checked></input>   
                            	</div>    
                        	</div>
                            <div class="control-group">
                                <label class="control-label" for="trending-grid-x">X-Axis Grid Lines</label>
                                <div class="controls">
                                    <input type="number" id="trending-grid-x" value="5" min="1" step="1"></input>
                                </div>
                            </div>
                           <div class="control-group">
                                <label class="control-label" for="trending-grid-y">Y-Axis GridLines</label>
                                <div class="controls">
                                    <input type="number" id="trending-grid-y" value="5" min="1" step="1"></input>
                                </div>
                            </div>
                        
                        </div>                   
                    </li>
                </ul>
          </div>
  
  </form>
</div>
